<div class="row home_section">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                관리자 페이지입니다.
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table_employee" class="table table-bordered table-striped">
                    <!--<thead>-->
                    <!--<tr>-->
                        <!--<th class="center">지점</th>-->
                        <!--<th class="center">직책</th>-->
                        <!--<th class="center">이름</th>-->
                        <!--<th class="center">전화번호</th>-->
                        <!--<th class="center">이메일</th>-->
                        <!--<th class="center">Action</th>-->
                    <!--</tr>-->
                    <!--</thead>-->
                    <tbody>
                    {{#each list}}
                    <tr>
                        <td class="center">{{branch}}</td>
                        <td class="center">{{duty}}</td>
                        <td class="center">{{name}}</td>
                        <td class="center">{{phone}}</td>
                        <td class="center">{{email}}</td>
                        <td class="center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-warning">수정</button>
                                <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#"
                                           class="btn-modify-userinfo"
                                           data-user-id="{{id}}"
                                           data-user-branch="{{branch_id}}"
                                           data-user-duty="{{duty_id}}"
                                           data-user-name="{{name}}"
                                           data-user-phone="{{phone}}"
                                           data-user-email="{{email}}"
                                           data-toggle="modal"
                                           data-target="#modifyEmployee">정보수정</a>
                                    </li>
                                    <li><a href="#"
                                           data-user-id="{{id}}"
                                           data-user-name="{{name}}"
                                           data-toggle="modal"
                                           data-target="#setEmployeePassword"
                                           data-url="/employee/password/reset"
                                           class="btn-modify-password">비밀번호변경</a>
                                    </li>
                                    <!--<li><a href="#">삭제</a></li>-->
                                </ul>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                    </tbody>
                    <!--<tfoot>-->
                    <!--<tr>-->
                        <!--<th>지점</th>-->
                        <!--<th>직책</th>-->
                        <!--<th>이름</th>-->
                        <!--<th>전화번호</th>-->
                        <!--<th>이메일</th>-->
                        <!--<th>Action</th>-->
                    <!--</tr>-->
                    <!--</tfoot>-->
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
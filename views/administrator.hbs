<div class="row home_section">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <button class="btn btn-default pull-right">
                  <i class="fa fa-user-circle-o"></i> &nbsp;
                  관리자생성
                </button>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table_admin" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="center">ID</th>
                        <th class="center">이름</th>
                        <th class="center">이메일</th>
                        <th class="center">권한</th>
                        <th class="center">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each list}}
                    <tr>
                      <td class="center">{{id}}</td>
                      <td class="center">{{name}}</td>
                      <td class="center">{{email}}</td>
                      <td class="center">{{role}}</td>
                      <td class="center">
                        {{#if (isEquals role 'superadmin') }}
                        -
                        {{else}}
                        <div class="btn-group">
                          <button type="button" class="btn btn-warning">수정</button>
                          <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <li><a href="#"
                                   class="btn-modify-admininfo"
                                   data-toggle="modal"
                                   data-target="#modifyEmployee">정보수정</a>
                            </li>
                            <li><a href="#"
                                   data-user-id="{{id}}"
                                   data-user-name="{{name}}"
                                   data-toggle="modal"
                                   data-target="#setEmployeePassword"
                                   data-url="/admin/password/reset"
                                   class="btn-modify-password">비밀번호변경</a>
                            </li>
                            <li><a href="#" class="btn-suspend">정지</a></li>
                          </ul>
                        </div>
                        {{/if}}
                      </td>
                    </tr>
                    {{/each}}
                    </tbody>
                    <tfoot>
                    <tr>
                      <th class="center">ID</th>
                      <th class="center">이름</th>
                      <th class="center">이메일</th>
                      <th class="center">권한</th>
                      <th class="center">Action</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->


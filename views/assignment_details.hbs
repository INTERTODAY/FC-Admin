<div class="row home_section">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header with-border margin">
                <a href="/assignment" class="btn btn-default">
                    <i class="fa fa-list"></i> &nbsp;
                    목록으로
                </a>

                <div class="pull-right">
                    <button class="btn btn-primary btn-assign-education" data-toggle="modal" data-target="#allocationEdu">
                        <i class="fa fa-calendar-minus-o"></i> &nbsp;
                        교육과정 배정
                    </button>
                    
                    {{#each detail}}
                    <button id="delete-assignment" type="button" class="btn btn-danger"
                        data-id="{{id}}"
                        data-group-id="{{group_id}}"
                    >
                        <i class="fa fa-times" aria-hidden="true"></i>
                        교육생 그룹 삭제
                    </button>
                    {{/each}}
                </div>
                
                <!--교육 대상자 리스트를 보여준다.<br />-->
                <!--교육 배정을 할 수 있다. <br />-->
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive margin">

                <h3 class="box-title">
                   {{#each detail}}
                       {{title}}
                       <input type="hidden" class="description group_id" value="{{group_id}}" />
                       <input type="hidden" class="description bind_group_id" value="{{id}}" />
                   {{/each}}
                </h3>

                <hr />

                <table id="table_assignment_details" class="table no-margin table-bordered table-striped" width="100%">
                    <thead>
                    <tr>
                        <th class="center">지점</th>
                        <th class="center">직책</th>
                        <th class="center">이름</th>
                        <th class="center">전화번호</th>
                        <th class="center">이메일</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each detail_list}}
                    <tr>
                        <td class="center">{{branch}}</td>
                        <td class="center">{{duty}}</td>
                        <td class="center">{{name}}</td>
                        <td class="center">{{phone}}</td>
                        <td class="center">{{email}}</td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->


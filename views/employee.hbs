<div class="row home_section">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="btn-area-employee">
                    <button class="btn btn-default">
                        <i class="fa fa-cloud-upload"></i>&nbsp;
                        지점등록
                    </button>
                    <button class="btn btn-default">
                        <i class="fa fa-cloud-upload"></i>&nbsp;
                        직책등록
                    </button>
                    <button class="btn btn-default">
                        <i class="fa fa-cloud-upload"></i>&nbsp;
                        직원등록(.xls)
                    </button>
                    <button class="btn btn-default">
                        <i class="fa fa-file-excel-o"></i>&nbsp;
                        직원 등록 양식(.xls)
                    </button>
                    <button class="btn btn-default">
                        <i class="fa fa-download"></i>&nbsp;
                        직원전체
                    </button>
                    <button class="btn btn-success pull-right" data-toggle="modal" data-target="#createEmployee">직원생성</button>
                </div>

                <!-- 조건 검색 -->
                <form class="form-group" method="post" action="/employee">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>지점선택</label>
                            <select class="form-control select2 select-branch" multiple="multiple" data-placeholder="지점 선택" style="width: 100%;">
                                <option value="0">전체</option>
                                {{#each branch}}
                                <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                            <input type="hidden" name="branch" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>직책선택</label>
                            <select class="form-control select2 select-duty" multiple="multiple" data-placeholder="지점 선택" style="width: 100%;">
                                <option value="0">전체</option>
                                {{#each duty}}
                                <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                            <input type="hidden" name="duty" />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="employee_name">이름</label>
                                <input type="text" class="form-control" id="employee_name" placeholder="이름" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="employee_tel">전화번호</label>
                                <input type="text" class="form-control" id="employee_tel" placeholder="전화번호" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="employee_email">이메일</label>
                                <input type="text" class="form-control" id="employee_email" placeholder="이메일" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-primary btn-employee-search btn-block">검색</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table_employee" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="center">지점</th>
                        <th class="center">직책</th>
                        <th class="center">이름</th>
                        <th class="center">전화번호</th>
                        <th class="center">이메일</th>
                        <th class="center">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#for 0 10 1}}
                    <tr>
                        <td class="center">성동점</td>
                        <td class="center">점주</td>
                        <td class="center">박민규</td>
                        <td class="center">010-4363-5567</td>
                        <td class="center">nbc21@nate.com</td>
                        <td class="center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-warning">수정</button>
                                <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">정보수정</a></li>
                                    <li><a href="#">비밀번호변경</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    {{/for}}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>지점</th>
                        <th>직책</th>
                        <th>이름</th>
                        <th>전화번호</th>
                        <th>이메일</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

{{> modal_create_employee}}
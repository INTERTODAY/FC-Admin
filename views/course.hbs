<div class="row home_section">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="col-md-3">
                    <form class="" action="" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="강의명 검색" required />
                            <span class="input-group-btn">
                              <button type="submit" class="btn btn-primary btn-flat">검색</button>
                            </span>
                        </div>
                    </form>
                </div>
                <div class="col-md-9">
                    <button class="btn btn-default pull-right" style="margin-left: 5px;" data-toggle="modal" data-target="#registerCourse">
                        <i class="fa fa-pencil-square-o"></i>
                        강의 등록
                    </button>
                    <button class="btn btn-default pull-right" style="margin-left: 5px;" data-toggle="modal" data-target="#createTeacher">
                        <i class="fa fa-pencil-square-o"></i>
                        강사 등록
                    </button>
                    <button class="btn btn-default pull-right" data-toggle="modal" data-target="#teacherList">
                        <i class="fa fa-user"></i> &nbsp;
                        등록된 강사
                    </button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table_course" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="center">강의명</th>
                        <th class="center">강사명</th>
                        <th class="center">생성일</th>
                        <th class="center">생성자</th>
                        <th class="center">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each list}}
                        <tr>
                            <td class="center"><a href="/course/details?id={{course_id}}" class="btn-link">{{name}}</a></td>
                            <td class="center">{{teacher}}</td>
                            <td class="center">{{time created_dt}}</td>
                            <td class="center">{{creator}}</td>
                            <td class="center">
                                <a href="/course/details?id={{course_id}}" class="btn btn-default btn-sm">
                                    <i class="fa fa-eye"></i>&nbsp;
                                    상세보기
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th class="center">강의명</th>
                        <th class="center">강사명</th>
                        <th class="center">생성일</th>
                        <th class="center">생성자</th>
                        <th class="center">Action</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

{{> modal_view_teacher}}

                    </tr>
                    </thead>

                    <tbody>
                    {{#each list}}
                    <tr>
                        <td class="center">{{time created_dt}}</td>
                        <td class=""><a href="/assignment/details?id={{id}}&group_id={{group_id}}">{{title}}</a></td>
                        <td class="center">{{creator}}</td>
                        <td class="">{{desc}}</td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
